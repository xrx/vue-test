{
    "root": true,
    "ecmaFeatures": {
        "modules": true
    },
    "rules": {
        "indent":          [2, 2],
        "quotes":          [0, "double"],
        "linebreak-style": [2, "unix"],
        "semi":            [2,"never"],
        "max-len":         [2, 100, 2],
        "space-before-blocks": [2, "always"],
        # "space-before-function-paren": [2, { anonymous: "never", named: "always" }],
        # "max-params":      [2, 4]
    },
    "env": {
        "browser": true,
        "es6": true,
        "commonjs": true
    },
    "globals": {
        "angular": false
    },
    "extends": "eslint:recommended"
}
